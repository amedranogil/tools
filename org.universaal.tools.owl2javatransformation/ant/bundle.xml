<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="bundle" default="start" basedir="..">

	<target name="compile" depends="cleanUp">
		<mkdir dir="bin" />
		<javac srcdir="src" destdir="bin">
			<classpath>
				<fileset dir="lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir=".">
					<include name="templates/*.vm" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="bundle">
		<jar destfile="./jar/owl2javatransformation.jar">
			<fileset dir="bin">
				<include name="**/*.*" />
			</fileset>
			<fileset dir=".">
				<include name="templates/*.vm" />
			</fileset>
			<manifest>
				<attribute name="Main-Class" value="org.universaal.tools.owl2javatransformation.Owl2JavaTransformation"/>
				<attribute name="Class-Path" value="velocity-1.7-dep.jar guava-r09.jar jena-2.6.4.jar icu4j-3.4.4.jar iri-0.8.jar junit-5.4.jar log4j-1.2.14.jar lucene-core-2.3.1.jar slf4j-api-1.5.8.jar slf4j-log4j12-1.5.8.jar stax-api-1.0.1.jar wstx-asl-3.2.9.jar xercesImpl-2.7.1.jar"/>	
			</manifest>
		</jar>
	</target>
	
	<target name="cleanUp">
		<delete dir="bin" />
	</target>
	
	<target name="start" depends="bundle" />
</project>