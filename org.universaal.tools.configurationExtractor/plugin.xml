<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- View -->

   <extension
         point="org.eclipse.ui.views">
      <category
            name="AAL Studio"
            id="org.universaal.tools.configurationExtractor">
      </category>
      <view
            category="org.universaal.tools.configurationExtractor"
            class="org.universaal.tools.configurationExtractor.view.CEView"
            id="org.universaal.tools.configurationExtractor.CEView"
            name="Configuration Extractor">
      </view>
   </extension>
   
   <!-- -->
   
      <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.universaal.tools.configurationExtractor.actionSet">   
           <action
               label="&amp;Extract the configuration"
               icon="icons/wizardIcon.jpg"
               class="org.universaal.tools.configurationExtractor.actions.ExtractorAction"
               tooltip="Extract the configuration comments and create the ontology"
               menubarPath="org.universaal.tools.AALStudio.menu/build"
               toolbarPath="uAALGroup"
               id="org.universaal.tools.configurationExtractor.ExtractorAction">				
         </action>      
      </actionSet>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="universAAL"
            id="org.universaal.tools.configurationExtractor.commands">
      </category>
      <command
            name="Build application"
            categoryId="org.universaal.tools.configurationExtractor.commands"
            id="org.universaal.tools.configurationExtractor.ExtractorAction">
      </command>
   </extension> 
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.universaal.tools.configurationExtractor.ExtractorAction"
            class="org.universaal.tools.configurationExtractor.handlers.ExtractorHandler">
      </handler>
   </extension> 
   

</plugin>
