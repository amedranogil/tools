<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.universaal.tools.buildServiceApplication.actionSet">
         <menu
               label="universAAL"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
                  <action
               label="&amp;Debug Persona Service"
               icon="icons/sample.gif"
               class="org.universaal.tools.buildserviceapplication.actions.DebugAction"
               tooltip="Debug Persona Service"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.universaal.tools.buildserviceapplication.actions.DebugAction"   
               enablesFor="1">
				<selection class="org.eclipse.core.resources.IProject">
				</selection>
         </action>
         <action
               label="&amp;Run Persona Service"
               icon="icons/sample.gif"
               class="org.universaal.tools.buildserviceapplication.actions.RunAction"
               tooltip="Run Persona Service"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.universaal.tools.buildserviceapplication.actions.RunAction"   
               enablesFor="1">
				<selection class="org.eclipse.core.resources.IProject">
				</selection>
         </action>
         <action
               label="&amp;Build Persona Service"
               icon="icons/sample.gif"
               class="org.universaal.tools.buildserviceapplication.actions.SampleAction"
               tooltip="Build Persona Service"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.universaal.tools.buildserviceapplication.actions.SampleAction"
               enablesFor="1">
				<selection class="org.eclipse.core.resources.IProject">
				</selection>
         </action>
         
         
      </actionSet>

   </extension>

</plugin>
    